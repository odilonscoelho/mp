#!/bin/zsh
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
urls ()
{
  case $url in
    *youtube.com* ) 
      declare -x new_class="YouTube" && declare -x format=$(format.url "youtube") || \
        { wq notificatime 2000 "Seleção Abortada" & exit 1 };;
    *spankbang* ) 
      declare -x new_class="spankbang" && declare -x format=$(format.url "spankbang") || \
        { wq notificatime 2000 "Seleção Abortada" & exit 1 };;
  esac
  sock.ativo && add.url || add.url.clear
}
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
lfs ()
{
  sock
  sock.ativo && add || add
}
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
yads ()
{
  sock
  sock.ativo && add.yad || add.yad.clear
}
#-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
m3us ()
{
  sock
  sock.ativo && add.m3u || add.m3u.clear
}


